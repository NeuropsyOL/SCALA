<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
   
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview" >
    </TextView>

    <Button
        android:id="@+id/loadRightTemplate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|center_horizontal|right"
        android:text="Load Right Template" />

    <Button
        android:id="@+id/loadLeftTemplate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loadRightTemplate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|center_horizontal|left"
        android:text="Load Left Template" />

    <Button
        android:id="@+id/startExperiment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loadLeftTemplate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Start Experiment"
        android:textStyle="bold" />
    
</RelativeLayout>